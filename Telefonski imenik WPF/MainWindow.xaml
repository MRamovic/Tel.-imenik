            <Button     FontSize="42"   Content="Izbrsi"  Click="Click_Button_Izbrisi"    x:Name="btn_Izbrisi"  Margin=" 20,20"/>
            <Button     FontSize="42"   Content="Izlaz"   Click="Click_Button_Izlaz"      x:Name="btn_Izlaz"    Margin=" 20,20"/>
        </StackPanel>
        <DataGrid Name="dg" FontSize=" 40">
            
        </DataGrid>
    </DockPanel>
